{% extends 'base/base.html.twig' %}

{% block body %}
    <h2>{{ news.title }}</h2>
    {{ news.description | raw }}
    <p><strong>Publié le:</strong> {{ news.publicationDate|date('d-m-Y') }} </p>
    {% if news.lastEditDate %}
        <p><strong>Modifié le:</strong> {{ news.lastEditDate|date('d-m-Y') }} </p>
    {% endif %}
    <p><strong>Ajouté par:</strong> {{ news.author.firstname }} {{ news.author.lastname }}</p>

{% endblock %}
