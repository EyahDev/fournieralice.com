{% extends 'base/base.html.twig' %}

{% block title %}
    Alice Fournier | Portfolio - Accès à l'administration
{% endblock %}

{% block body %}

    <div class="uk-flex uk-flex-center">

        <div class="login uk-flex uk-flex-center uk-width-1-4@xl uk-width-2-5@l uk-width-1-2@m uk-width-3-4@s uk-width-5-6">
            <div class="uk-card uk-card-default uk-width-1 uk-card-body login-card">
                <h3 class="uk-card-title">Accès à l'administration</h3>

                {% if error %}
                    <div class="uk-alert-danger" uk-alert>
                        <a class="uk-alert-close" id="close-error" uk-close></a>
                        <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                    </div>
                {% endif %}

                <form action="{{ path('administration') }}" method="post">
                    <div class="uk-margin">
                        <div class="uk-inline uk-width-1">
                            <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: mail"></span>
                            <input class="uk-input" type="text" id="username" name="_username"
                                   placeholder="Adresse email" value="{{ lastUsername }}">
                        </div>

                        <div class="uk-margin">
                            <div class="uk-inline uk-width-1">
                                <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: lock"></span>
                                <input class="uk-input" type="password" id="password" placeholder="Mot de passe"
                                       name="_password">
                            </div>
                        </div>

                        <div class="uk-margin uk-grid-small uk-child-width-auto uk-grid">
                            <label><input class="uk-checkbox" type="checkbox"> Rester connecté</label>
                        </div>

                        <button class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom" type="submit">
                            Connexion
                        </button>
                    </div>
                </form>

                <a href="#modal-forgotten-password" class="uk-align-right" uk-toggle>Mot de passe perdu ? </a>
            </div>
        </div>

        <forgotten-password></forgotten-password>

    </div>

    <div id="particles-js"></div>

{% endblock %}

{% block stylesheets %}
    <style>
        .login {
            position: absolute;
            top: 50%;
            -ms-transform: translateY(-50%);
            transform: translateY(-50%);
        }

        .login-card {
            border-radius: 4px;
        }

        .uk-card-title {
            margin-bottom: 45px;
        }
    </style>
{% endblock %}