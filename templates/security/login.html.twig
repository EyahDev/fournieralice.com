{% extends 'base/base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('administration') }}" method="post">
        <label for="username">Email</label>
        <input type="text" id="username" name="_username" value="{{ lastUsername }}" />

        <label for="password">Mot de passe</label>
        <input type="password" id="password" name="_password" />

        <input type="checkbox" class="filled-in" id="remember_me" name="_remember_me" />
        <label for="remember_me">Se souvenir de moi</label><br/>

        <button type="submit">login</button>
    </form>

    <a href="{{ path('lostPassword') }}">Mot de passe perdu ? </a>
{% endblock %}